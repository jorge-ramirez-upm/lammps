# BD of particles

dimension	2
units		lj
atom_style	atomic

lattice		sq 0.3
region		box block 0 500 0 500 0 0.1
create_box	1 box
create_atoms	1 box
mass		1 1.0

pair_style	lj/cut 1.122462048
pair_coeff	1 1 1.0 1.0 1.122462048
pair_modify	shift yes

neighbor	0.3 bin
neigh_modify	every 20 delay 0 check no

# Parameters of bd/ABP: Dt Fp Seed
fix		1 all bd/ABP 1.0 60.0 438985 

shell mkdir Frames
dump		id all custom 1 ./Frames/ABP.* id xu yu zu
dump_modify id sort id

thermo		1
timestep 0.0001 # Stenhammar2014 paper
#variable paso equal step
#shell mv ./Frames/ABP.${paso} ./Frames/ABP.end
#rerun 		ABP.dat # start 20000000 stop 20000001 dump x y z box yes replace yes label id format native
rerun ABP.dat dump x y
