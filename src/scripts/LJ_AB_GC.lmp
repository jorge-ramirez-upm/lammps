# Big colloid particles and small LJ particles

units		lj
atom_style	atomic
dimension	2

variable D equal 0.8 # Densidad
variable X equal 32
variable Y equal 32

#variable P equal 0.5 # Temperature
#variable T equal 0.1 # Temperature
#variable E equal 0.1 # Interaction energy A-B

log LJ_AB_GC_P$P_T$T_E$E_p$p.log

lattice		sq $D # Densidad
region		box block 0 $X 0 $Y -0.5 0.5
create_box	2 box
create_atoms	1 box

set		group all type/fraction 2 $p 23984

#set		type 1 mass 1
#set		type 2 mass 1
mass 1 1.0
mass 2 1.0

velocity	all create $T 87287 loop geom # Temperatura

# multi neighbor and comm for efficiency

neighbor	1 multi
neigh_modify	delay 0
comm_modify     mode multi

# colloid potential

pair_style	lj/cut 2.5
pair_coeff	1 1  1.0 1.0 
pair_coeff	1 2  $E 1.0 
pair_coeff	2 2  1.0 1.0 

write_data LJ_AB_GC_P$P_T$T_E$E_p$p.lammpsdat nocoeff

fix		1 all npt temp $T $T 1.0 iso $P $P 1.0 
#fix		1 all nvt temp $T $T 1.0 
#fix     1 all nve
fix		2 all enforce2d

fix SGMC all atom/swap 10 10 943984 $T semi-grand yes types 1 2 mu 0.0 0.0
#fix SGMC all atom/swap 10 10 943984 $T types 1 2

dump		1 all atom 1000 LJ_AB_GC_P$P_T$T_E$E_p$p.lammpstrj 

thermo_style	custom step temp epair etotal press vol
thermo		1000

timestep	0.01

run		1000000

