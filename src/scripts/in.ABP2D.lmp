# BD of particles

dimension	2
units		lj
atom_style	atomic

lattice		sq 0.6 # Volume fraction
region		box block 0 100 0 100 0 0.1
create_box	1 box
create_atoms	1 box
mass		1 1.0

pair_style	lj/cut 1.122462048
pair_coeff	1 1 1.0 1.0 1.122462048
pair_modify	shift yes

neighbor	0.3 bin
neigh_modify	every 20 delay 0 check no

# Parameters of bd/ABP: Dt Fp Seed
fix		1 all bd/ABP 1.0 80.0 438985 

dump		id all custom 100000 ABP.lammpstrj id xu yu zu
dump_modify id sort id

thermo		10000
timestep 0.00005 # Stenhammar2014 paper
run		20000000
